<h1>Photo Details</h1>
<dl>
  <dt>Image
    <dd>
      <img src="<%= @photo.image%>">
    </dd>
  </dt>
  <dt>Caption
    <dd><%= @photo.caption%></dd>
  </dt>
  <dt>Owner
    <dd><%= @photo.poster.username%></dd>
  </dt>
  <dt>Posted
    <dd><%= @photo.created_at%></dd>
  </dt>

  <dt>Edit Photo</dt>
  <dd>
    <form action="/update_photo/<%= @photo.id%>">
      <label for="browser_image">Image</label>
      <input id="browser_image" type="text" name="input_image" placeholder="Enter a URL for the image..." value="<%= @photo.image%>">

      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="input_caption" placeholder="Enter a caption for the photo..."><%= @photo.caption%></textarea>

      <button>Update photo</button>
    </form>
  </dd>

  <dt>Delete Photo</dt>
  <dd>
    <a href="/delete_photo/<%= @photo.id%>">Delete this photo</a>
  </dd>
</dl>

<h2>Comments</h2>
<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  <%  @photo.comments.each do |a_comment|%>
  <tr>
    <td><%= a_comment.commenter.username%></td>
    <td><%= a_comment.body%></td>
    <td><%= a_comment.created_at%></td>
  </tr>
  <% end %>
</table>

<h3>Add a new comment</h3>
<form action="/add_comment/<%= @photo.id%>">
  <label for="photo_id">Photo ID</label>
  <input id="photo_id" type="text" name="input_photo_id" value="<%= @photo.id%>">
  <label for="author_id">Author ID</label>
  <input id="author_id" type="text" name="input_author_id">
  <label for="comment">Comment</label>
  <textarea id="comment" name="input_comment" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
