<h1>List of users</h1>
<form action="/add_user">
  <label for="browser_input">Username</label>
  <input id="browser_input" type="text" name="input_user" placeholder="Enter a username...">
  <button>Add user</button>
</form>

<table border="1">
  <tr>
    <th>ID</th>
    <th>User Name</th>
    <th></th>
  </tr> 
<% @list_of_users.each do |a_user|%>
<tr>
  <td><%= a_user.id%></td>
  <td><%= a_user.username%></td>
  <td><a href="/users/<%= a_user.username%>">Show details</a></td>
</tr>
<% end %>
</table>
